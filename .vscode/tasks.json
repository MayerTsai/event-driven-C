{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project (event-driven-C)",
      "type": "shell",
      "command": "make",
      "args": [
        "all"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Builds the entire event-driven-C project using Makefile."
    },
    {
      "label": "Build Project (Debug Mode)",
      "type": "shell",
      "command": "make",
      "args": [
        "debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Builds the project with debug logging enabled using Makefile."
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": [],
      "detail": "Removes build artifacts using Makefile."
    }
  ]
}